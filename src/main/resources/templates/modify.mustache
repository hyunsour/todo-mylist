{{>layout/header}}

<br>
<h2>수정하기</h2>

<div class="col-md-12">
    <div class="col-md-4">
        <form>
            <div class="form-group">
                <label for="id">글 번호</label>
                <input type="text" class="form-control"
                       id="id" value="{{post.id}}" readonly>
            </div>
            <div class="form-group">
                <label for="title">To do</label>
                <input type="text" class="form-control"
                       id="title" value="{{post.title}}">
            </div>
            <div class="form-group">
                <label for="id">생성일</label>
                <input type="text" class="form-control"
                       id="crDate" value="{{post.crDate}}" readonly>
            </div>
            <div class="form-group">
                <label for="id">최근 수정일</label>
                <input type="text" class="form-control"
                       id="mdDate" value="{{post.mdDate}}" readonly>
            </div>
        </form>
        <a href="/index" role="button" class="btn btn-secondary">취소</a>
        <button type="button" class="btn btn-primary" id="btn-modify">수정완료</button>
    </div>

</div>
{{>layout/footer}}