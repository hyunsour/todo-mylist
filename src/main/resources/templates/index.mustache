{{>layout/header}}

<br>
<h2>To do App</h2>

<div class="col-md-12">
    <div class="row">
        <div class="col-md-6">
            <input type="text"
                   id="title"
                   placeholder="input your todo list"
                   class="form-control input-default w-25"  />
            <button type="button" class="btn btn-primary" id="btn-save">Add Todo</button>
        </div>
    </div>

    <br>
    <!-- 목록 영역 -->
    <table class="table table-horizontal table-bordered">
        <thead class="thead-strong">
        <tr>
            <th>id</th>
            <th>To do</th>
            <th>생성일</th>
            <th>수정일</th>
            <th>삭제</th>
        </tr>
        </thead>

        <tbody id="tbody">
            {{#posts}}
                <tr>
                    <td>{{id}}</td>
                    <td>
                    <a data-id="{{id}}" href="/modify/{{id}}" class="todo-modify">
                        {{title}}
                    </a>
                    </td>
                    <td>{{crDate}}</td>
                    <td>{{mdDate}}</td>
                    <td><a data-id="{{id}}" role="button" class="btn btn-danger">X</a></td>
                </tr>
            {{/posts}}
        </tbody>
    </table>
</div>
{{>layout/footer}}